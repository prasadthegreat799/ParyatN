<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nappdeveloper.paryatn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".OfflineCapability.Offlinefirebase"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Paryatan"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.tourismPartnerActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.studentPartnerActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.searchBarActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.OnBoarding"
            android:exported="false" />
        <activity
            android:name=".Activities.CompanyDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.splashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.registerUserActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.signInActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>