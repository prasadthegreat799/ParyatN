<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/companyImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:adjustViewBounds="true"
        android:background="@drawable/sphere_bg_white"
        android:src="@drawable/profile_icon"
        app:civ_border="true"
        app:civ_border_color="@color/browser_actions_bg_grey"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/browser_actions_bg_grey"
        app:civ_shadow_gravity="center"
        app:civ_shadow_radius="3dp" />

    <TextView
        android:id="@+id/companyNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Company Name"
        android:textColor="@color/ash"
        android:textStyle="bold" />

</LinearLayout>